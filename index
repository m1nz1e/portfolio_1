    <!-- Project Logic (Typing Effect) -->
    <script>
        const textArray = ["Scalable Data Ecosystems", "Auto-ML Pipelines", "Real-time ETL"];
        let textIndex = 0;
        let charIndex = 0;
        const target = document.getElementById("typing-text");

        function type() {
            if (charIndex < textArray[textIndex].length) {
                target.innerHTML += textArray[textIndex].charAt(charIndex);
                charIndex++;
                setTimeout(type, 100);
            } else {
                setTimeout(erase, 2000);
            }
        }

        function erase() {
            if (charIndex > 0) {
                target.innerHTML = textArray[textIndex].substring(0, charIndex - 1);
                charIndex--;
                setTimeout(erase, 50);
            } else {
                textIndex = (textIndex + 1) % textArray.length;
                setTimeout(type, 500);
            }
        }
        window.onload = type;
    </script>

    <!-- n8n Chatbot Integration -->
